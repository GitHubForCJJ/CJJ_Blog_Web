    <div class="navcontainer">
        <div class="nav">
            <div class="item"><span>1</span></div>
            <div class="item"><span>2</span></div>
        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
