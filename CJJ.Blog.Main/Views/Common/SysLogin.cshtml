
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SysLogin</title>
    <style>

        body {
            background: #353f42;
        }

        * {
            padding: 0;
            margin: 0;
        }

        .main {
            margin: 0 auto;
            /*padding-left: 25px;
            padding-right: 25px;
            padding-top: 15px;*/
            width: 400px;
            height: 360px;
            background: #FFFFFF;
            /*以下css用于让登录表单垂直居中在界面,可删除*/
            position: absolute;
            top: 50%;
            left: 50%;
            margin-top: -200px;
            margin-left: -180px;
        }

        .title {
            width: 100%;
            height: 40px;
            line-height: 40px;
        }

            .title span {
                font-size: 18px;
                color: #353f42;
            }

        .title-msg {
            width: 100%;
            height: 64px;
            line-height: 64px;
        }

        .title:hover {
            cursor: default;
        }

        .title-msg:hover {
            cursor: default;
        }

        .title-msg span {
            font-size: 12px;
            color: #707472;
        }

        .input-content {
            width: 100%;
            height: 120px;
        }

            .input-content input {
                width: 330px;
                height: 40px;
                border: 1px solid #dad9d6;
                background: #ffffff;
                padding-left: 10px;
                padding-right: 10px;
            }

        .enter-btn {
            width: 350px;
            height: 40px;
            color: #fff;
            background: #0bc5de;
            line-height: 40px;
            text-align: center;
            border: 0px;
        }

        .foor {
            width: 100%;
            height: auto;
            color: #9b9c98;
            font-size: 12px;
            margin-top: 20px;
        }

        .enter-btn:hover {
            cursor: pointer;
            background: #1db5c9;
        }

        .foor div:hover {
            cursor: pointer;
            color: #484847;
            font-weight: 600;
        }

        .left {
            float: left;
        }

        .right {
            float: right;
        }
    </style>
    <link href="~/Content/Layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <div class="main">

        <div class="layui-tab layui-tab-brief lycard" lay-filter="logtab">
            <ul class="layui-tab-title">
                <li lay-id="111" class="layui-this">密码登录</li>
                <li lay-id="222">二维码登录</li>
            </ul>
            <div class="layui-tab-content" style="padding:50px 20px 0 20px;">
                <div class="layui-tab-item layui-show">

                    <form class="login-form" method="post" novalidate>
                        <!--输入框-->
                        <div class="input-content">
                            <div>
                                <input type="text" autocomplete="off"
                                       placeholder="用户名" id="UserAccount" name="UserAccount" required />
                            </div>

                            <div style="margin-top: 16px">
                                <input type="password"
                                       autocomplete="off" id="UserPassword" placeholder="登录密码" name="UserPassword" required maxlength="32" />
                            </div>
                        </div>

                        <!--登入按钮-->
                        <!--登入按钮-->
                        <div style="text-align: center">
                            <button type="button" class="enter-btn">登录</button>
                        </div>

                        <div class="foor">
                            <div class="left"><span>忘记密码 ?</span></div>

                            <div class="right"><span>注册账户</span></div>
                        </div>
                    </form>
                </div>

                <div class="layui-tab-item">

                    <input type="hidden" id="loginkey" value=uuid()/>
                </div>
            </div>
        </div>




    </div>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Content/Md5.js"></script>
    <script src="~/Content/Layui/layui.js"></script>

    <script>
        //$(".login-form").submit(function (res) {
        //    var a = $(".login-form").serialize();
        //    console.log(a)
        //})
        layui.use(['form','jquery', 'element'], function (args) {
            var element = layui.element;
            var $ = jquery.$;

            element.on('tab(logtab)', function () {
                var id = this.getAttribute('lay-id');
                if (id == 222) {
                    var logkey = uuid();
                    localStorage.setItem("logincodekey", logkey);
                    $.post({
                        url:'Common/'
                    })
                }
            });
        })

        $(".enter-btn").click(function () {
            var uc = $("#UserAccount").val();
            var pw = $("#UserPassword").val();
            var pass = md5(pw).toUpperCase();
            var dd = { "UserAccount": uc, "Password": pass };
            console.log(dd)
            $.ajax({
                url: '/Common/Login',
                type: 'post',
                data: JSON.stringify(dd),
                contentType: 'application/json',
                dataType: 'json',
                success: function (res) {
                    console.log(res)

                    if (res.Code == 0) {
                        localStorage.userinfo = JSON.stringify(res.Data);
                        window.location = "/Home/index";
                    }
                }, error: function (err) {
                    console.log("err")
                    console.log(err)
                }
            })
        })

        function uuid() {
            var s = [];
            var hexDigits = "0123456789abcdef";
            for (var i = 0; i < 36; i++) {
                s[i] = hexDigits.substr(Math.floor(Math.random() * 0x10), 1);
            }
            s[14] = "4";  // bits 12-15 of the time_hi_and_version field to 0010
            s[19] = hexDigits.substr((s[19] & 0x3) | 0x8, 1);  // bits 6-7 of the clock_seq_hi_and_reserved to 01
            s[8] = s[13] = s[18] = s[23] = "-";

            var uuid = s.join("");
            return uuid;
        }
    </script>
</body>
</html>
